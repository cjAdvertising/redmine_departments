<table class="list">
  <thead style="text-align:left;">
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Contacts</th>
      <th>Issues</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr class="<%= cycle("odd", "even") %>">
				<td><%= content_tag(department.name? ? 'em' : 'span', link_to(department.name, department, :id => department)) %></td>
				<td><%= department.abbreviation %></td>
				<td><%= department.contacts.count %></td>
				<td><%= department.issues.count %></td>
        <td style="border: 0; padding: 0;">
          <%= link_to(image_tag('delete.png'), department, :confirm => "Are you sure?", :method => :delete) %>
        </td>
      </tr>
    <%- end %>
  </tbody>
</table>
