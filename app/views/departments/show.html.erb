<% if authorize_for('departments', 'edit') %>
	<div class="contextual">
	  <%= link_to('Edit Department', edit_department_path, :class => 'icon icon-edit') %>
	</div>
<% end %>

<h2><%= link_to l(:label_department_plural), :controller => 'departments', :action => 'index' %> &#187; <%= @department.name %> (<%= @department.abbreviation %>)</h2>
<div id="department-contacts">
	<h3>Contacts</h3>
  <%- @department.contacts.each do |contact| %>
    <p><%= mail_to contact.email, contact.name %> (<%=h number_to_phone(contact.phone) %>)</p>
	<%- if ( contact.courses != '') %>
	<ul>
		<%- contact.courses.split(',').each do |course| %>
		<li><%= course %></li>
		<%- end %>
	</ul>
	<%- end %>
  <%- end %>
</div>

<div id="department-issues">
	<h3>Issues</h3>
	<table class="list">
		<thead style="text-align:left;">
			<tr>
			  <th>ID</th>
			  <th>Subject</th>
			  <th>Status</th>
			</tr>
		</thead>
	  <tbody>
      <%- @department.issues.each do |issue| %>
      <tr>
        <td>#<%= issue.id %></td>
        <td><%=link_to( issue.subject, :controller => 'issues', :action => 'show', :id => issue ) %></td>
        <td><%= IssueStatus.find(issue.status_id).name %></td>
      </tr>
      <%- end %>
    </tbody>
  </table>
</div>

<% html_title(l(:title_department_view)) -%>
